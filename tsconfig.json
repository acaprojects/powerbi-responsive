{
  "compilerOptions": {
    "target": "ES6",
    "outDir": "./dist",
    "module": "CommonJS",
    "declaration": true,
    "moduleResolution": "Node",
    "removeComments": true,
    "strict": true,
    "noImplicitAny": false,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
